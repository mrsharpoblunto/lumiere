{
  "name": "Lumiere",
  "version": "1.0.0",
  "description": "Control an LED matrix for an animated display",
  "scripts": {
    "test": "echo \"Error: no test specified\" && exit 1",
    "build": "rimraf dist/ && vite build",
    "server": "node src/server/index.mjs",
    "dev:server": "nodemon --watch src/server --inspect src/server/index.mjs",
    "dev:client": "vite --port 3001",
    "dev": "concurrently \"npm run dev:server\" \"npm run dev:client\"",
    "build:assets": "node scripts/png-to-mjs.js"
  },
  "repository": {
    "type": "git",
    "url": "git+https://github.com/mrsharpoblunto/lumiere.git"
  },
  "author": "Glenn Conner",
  "license": "MIT",
  "bugs": {
    "url": "https://github.com/mrsharpoblunto/lumiere/issues"
  },
  "homepage": "https://github.com/mrsharpoblunto/lumiere#readme",
  "dependencies": {
    "@material-ui/core": "^4.11.1",
    "@material-ui/icons": "^4.9.1",
    "body-parser": "^1.19.0",
    "compression": "^1.7.4",
    "cookie-parser": "^1.4.5",
    "errorhandler": "^1.5.1",
    "express": "^4.17.1",
    "hap-nodejs": "^0.8.2",
    "morgan": "^1.10.0",
    "node-fetch": "^2.6.1",
    "node-persist": "^3.1.0",
    "node-uuid": "^1.4.8",
    "rpi-led-matrix": "^1.11.1",
    "suncalc": "^1.9.0",
    "tree-kill": "^1.2.2",
    "winston": "^3.3.3"
  },
  "devDependencies": {
    "@fsouza/prettierd": "^0.26.1",
    "concurrently": "^5.3.0",
    "nodemon": "^2.0.6",
    "prettier": "^2.2.0",
    "react": "16.14.x",
    "react-dom": "16.14.x",
    "rimraf": "^6.0.1",
    "sharp": "^0.33.2",
    "svgo": "^3.3.2",
    "vite": "^6.3.5"
  }
}
