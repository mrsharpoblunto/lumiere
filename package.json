{
  "name": "Lumiere",
  "version": "1.0.0",
  "description": "Control an LED matrix for an animated display",
  "type": "module",
  "scripts": {
    "test": "echo \"Error: no test specified\" && exit 1",
    "build": "rimraf dist-client/ && tsc && vite build",
    "server": "node src/server/index.ts",
    "dev:server": "nodemon --watch src/server --inspect src/server/index.ts",
    "dev:client": "vite --port 3001",
    "dev": "concurrently \"npm run dev:server\" \"npm run dev:client\"",
    "build:assets": "node scripts/png-to-mjs.ts",
    "typecheck": "tsc --noEmit"
  },
  "repository": {
    "type": "git",
    "url": "git+https://github.com/mrsharpoblunto/lumiere.git"
  },
  "author": "Glenn Conner",
  "license": "MIT",
  "bugs": {
    "url": "https://github.com/mrsharpoblunto/lumiere/issues"
  },
  "homepage": "https://github.com/mrsharpoblunto/lumiere#readme",
  "dependencies": {
    "body-parser": "^1.19.0",
    "compression": "^1.7.4",
    "cookie-parser": "^1.4.5",
    "errorhandler": "^1.5.1",
    "express": "^5.1.0",
    "hap-nodejs": "^0.11.2",
    "morgan": "^1.10.0",
    "node-fetch": "^2.6.1",
    "node-persist": "^3.1.0",
    "rpi-led-matrix": "^1.11.1",
    "suncalc": "^1.9.0",
    "uuid": "^11.1.0",
    "winston": "^3.3.3"
  },
  "devDependencies": {
    "@fsouza/prettierd": "^0.26.1",
    "@types/body-parser": "^1.19.5",
    "@types/compression": "^1.7.5",
    "@types/cookie-parser": "^1.4.6",
    "@types/errorhandler": "^1.5.3",
    "@types/express": "^5.0.2",
    "@types/morgan": "^1.9.9",
    "@types/node": "^20.10.5",
    "@types/node-fetch": "^2.6.9",
    "@types/node-persist": "^3.1.5",
    "@types/react": "^16.14.56",
    "@types/react-dom": "^16.9.24",
    "@types/suncalc": "^1.9.2",
    "concurrently": "^5.3.0",
    "fast-average-color": "^9.5.0",
    "nodemon": "^2.0.6",
    "prettier": "^2.2.0",
    "react": "16.14.x",
    "react-dom": "16.14.x",
    "rimraf": "^6.0.1",
    "sharp": "^0.33.2",
    "svgo": "^3.3.2",
    "typescript": "^5.3.3",
    "vite": "^6.3.5"
  }
}
