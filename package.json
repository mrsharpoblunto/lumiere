{
  "name": "fyreplace",
  "version": "1.0.0",
  "description": "Control an LED matrix for an animated display",
  "scripts": {
    "test": "echo \"Error: no test specified\" && exit 1",
    "build": "rimraf dist/ && parcel build src/client/index.html --no-scope-hoist --no-source-maps",
    "server": "node src/server/index.js",
    "dev:server": "nodemon --watch src/server --inspect src/server/index.mjs",
    "dev:client": "parcel serve src/client/index.html --port 3001",
    "dev": "concurrently \"npm run dev:server\" \"npm run dev:client\""
  },
  "repository": {
    "type": "git",
    "url": "git+https://github.com/mrsharpoblunto/fyreplace.git"
  },
  "author": "Glenn Conner",
  "license": "MIT",
  "bugs": {
    "url": "https://github.com/mrsharpoblunto/fyreplace/issues"
  },
  "homepage": "https://github.com/mrsharpoblunto/fyreplace#readme",
  "dependencies": {
    "@material-ui/core": "^4.11.1",
    "@material-ui/icons": "^4.9.1",
    "body-parser": "^1.19.0",
    "compression": "^1.7.4",
    "cookie-parser": "^1.4.5",
    "errorhandler": "^1.5.1",
    "express": "^4.17.1",
    "hap-nodejs": "^0.8.2",
    "morgan": "^1.10.0",
    "node-fetch": "^2.6.1",
    "node-persist": "^3.1.0",
    "node-uuid": "^1.4.8",
    "rpi-led-matrix": "^1.11.1",
    "winston": "^3.3.3"
  },
  "devDependencies": {
    "@babel/cli": "^7.12.8",
    "@babel/core": "^7.12.9",
    "@babel/preset-env": "^7.12.7",
    "@babel/preset-react": "^7.12.7",
    "@babel/register": "^7.12.1",
    "@parcel/resolver-default": "^2.0.0-beta.1",
    "concurrently": "^5.3.0",
    "nodemon": "^2.0.6",
    "parcel": "^2.0.0-beta.1",
    "prettier": "^2.2.0",
    "react": "^17.0.1",
    "react-dom": "^17.0.1",
    "rimraf": "^3.0.2"
  }
}
